{
  // ==================== 阿里云 OSS 配置 ====================
  "ACCESS_KEY_ID": "YOUR_ALIBABA_CLOUD_ACCESS_KEY_ID",           // 【请使用环境变量传入真实值】阿里云访问密钥 ID
  "ACCESS_KEY_SECRET": "YOUR_ALIBABA_CLOUD_ACCESS_KEY_SECRET",   // 【请使用环境变量传入真实值】阿里云访问密钥 Secret
  "ENDPOINT": "oss-cn-hangzhou.aliyuncs.com",                   // OSS 存储区域端点
  "BUCKET_NAME": "your-bucket-name",                            // OSS bucket 名称

  // ==================== 通用设置 ====================
  "EXPIRES_IN": 1800,                                           // 签名 URL 过期时间（单位：秒）
  "ALLOWED_EXTENSIONS": [".jpg", ".jpeg", ".png", ".bmp", ".gif"], // 允许上传的图片格式
  "LOG_FILE": "ocr_processing.log",                             // 日志输出文件路径
  "CONCURRENCY": 10,                                            // 并发线程数上限
  "RETRY_TIMES": 5,                                             // 失败重试次数
  "IMAGE_PROCESSING_TIMEOUT": 30,                               // 单张图像处理超时时间（秒）

  // ==================== Coze API 配置 ====================
  "COZE_API_KEY": "YOUR_COZE_API_KEY",                          // 【请使用环境变量传入真实值】Coze 平台 API 密钥
  "WORKFLOW_ID": "your_workflow_id_here",                       // Coze 工作流 ID

  // ==================== 输出与限流设置 ====================
  "SUMMARY_DIR": "summary",                                     // OCR 结果摘要保存目录
  "MAX_REQUESTS_PER_MINUTE": 300,                               // 每分钟最大请求次数限制
  "RATE_LIMIT_BUFFER": 0.9,                                     // 请求频率缓冲比例（预留空间防超限）
  "OPTIMAL_RATE": 270,                                          // 实际使用的最优请求速率（建议低于 MAX）

  // ==================== 正则表达式验证规则 ====================
  "RE": "([A-Za-z][0-9])|([0-9][A-Za-z])"                      // 匹配字母+数字或数字+字母组合的正则表达式
}
